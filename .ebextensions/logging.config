files:
    "/etc/rsyslog.d/catalina.conf":
        mode: "0655"
        owner: root
        group: root
        content: |
            # Redirect tomcat logs to /var/log/tomcat/catalina.out discarding timestamps
            template(name="catalinalog" type="string"
                string="%msg%\n")
            if $programname == 'server' then {
                *.=warning;*.=err;*.=crit;*.=alert;*.=emerg /var/log/tomcat9/catalina.out;catalinalog
                *.=info;*.=notice /var/log/tomcat9/catalina.out;catalinalog
            }
commands:
    restart_rsyslog:
        command: systemctl restart rsyslog